{% extends '@NetgenAdminUI/pagelayout.html.twig' %}

{% block title %}
    {{ 'betting_game.teams'|trans }}
{% endblock %}

{% block content %}
    <div class="panel">
        <h1>{{ 'betting_game.teams'|trans }}</h1>
        <h2>Mannschaft bearbeiten</h2>
        <form method="post" action="{{ path('betting_game_admin_teams_edit', {'id': team.id}) }}">
            <div class="form-group">
                <label for="team_name">Name</label>
                <input type="text" name="team_name" id="team_name" class="form-control" value="{{ team.name }}" required>
            </div>
            <div class="form-group">
                <label for="team_league">Liga</label>
                <select name="team_league" id="team_league" class="form-control" required>
                    {% for league in leagueList %}
                        <option value="{{ league.id }}"{% if team.league.id == league.id %} selected{% endif %}>{{ league.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" name="EditTeam" class="btn btn-primary">Bearbeiten</button>
        </form>
    </div>
{% endblock %}
