{% extends '@NetgenAdminUI/pagelayout.html.twig' %}

{% block title %}
    {{ 'betting_game.matches'|trans }}
{% endblock %}

{% block content %}
    <div class="panel">
        <h1>{{ 'betting_game.matches'|trans }}</h1>
        {{ block('matches_create') }}
        {{ block('matches_table') }}
    </div>
{% endblock %}

{% block matches_table %}
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Datum</th>
                <th>Liga</th>
                <th>Heim-Mannschaft</th>
                <th>Auswärts-Mannschaft</th>
                <th>Ergebnis</th>
                <th>&nbsp;</th>
            </tr>
            {% for match in matchList %}
                <tr>
                    <td>{{ match.id }}</td>
                    <td>{% if match.date %}{{ match.date|date('d.m.Y H:i') }}{% endif %}</td>
                    <td>{{ match.league.name }}</td>
                    <td>{{ match.homeTeam.name }}</td>
                    <td>{{ match.awayTeam.name }}</td>
                    <td>{{ match.homeScore }} : {{ match.awayScore }}</td>
                    <td>
                        <a href="{{ path('betting_game_admin_matches_edit', {'id': match.id}) }}">Bearbeiten</a>
                        <a href="{{ path('betting_game_admin_matches_delete', {'id': match.id}) }}">Löschen</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Keine Daten vorhanden</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

{% block matches_create %}
    <h2>Neues Spiel anlegen</h2>
    <form method="post" action="{{ path( 'betting_game_admin_matches_create' ) }}">
        <div class="form-group">
            <label for="match_date">Datum</label>
            <input type="text" name="match_date" id="match_date" class="form-control">
        </div>
        <div class="form-group">
            <label for="match_home_team">Heim-Mannschaft</label>
            <select name="match_home_team" id="match_home_team" class="form-control" required>
                {% for team in teamList %}
                    <option value="{{ team.id }}">{{ team.league.name }} - {{ team.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="match_away_team">Auswärts-Mannschaft</label>
            <select name="match_away_team" id="match_away_team" class="form-control" required>
                {% for team in teamList %}
                    <option value="{{ team.id }}">{{ team.league.name }} - {{ team.name }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" name="CreateMatch" class="btn btn-primary">Anlegen</button>
    </form>
{% endblock %}