{% extends pagelayout %}

{% block title %}
    {{ 'betting_game.ranking'|trans }}
{% endblock %}

{% block content %}
    <div class="betting-game betting-game-ranking">
        <h1>{{ 'betting_game.ranking'|trans }}</h1>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Position</th>
                    <th>Name</th>
                    <th>Punkte</th>
                </tr>
                {% for user in userList %}
                    <tr>
                        <th>{{ user.position }}</th>
                        <th><a href="{{ path('betting_game_user', {'userId': user.id}) }}">{{ user.lastName }} {{ user.firstName }}</a></th>
                        <th>{{ user.score }}</th>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Es gibt momentan noch keine Teilnehmer</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}